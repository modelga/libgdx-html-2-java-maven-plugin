<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.littleinfinity</groupId>
    <artifactId>libgdx-html-2-java-maven-plugin</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <properties>
        <roaster-jdt.version>2.9.0.Final</roaster-jdt.version>
        <jsoup.version>1.8.1</jsoup.version>
        <maven-plugin-api.version>3.2.3</maven-plugin-api.version>
        <gdx.version>1.4.1</gdx.version>
    </properties>
    <packaging>maven-plugin</packaging>

    <name>LibGDX html to java maven plugin</name>

    <developers>
        <developer>
            <name>Mateusz Odelga</name>
            <roles>Leader</roles>
        </developer>
        <developer>
            <name>Adrian Skrobek</name>
            <roles>Developer</roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>${maven-plugin-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.badlogicgames.gdx</groupId>
            <artifactId>gdx</artifactId>
            <version>${gdx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>${jsoup.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.forge.roaster</groupId>
            <artifactId>roaster-api</artifactId>
            <version>${roaster-jdt.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.forge.roaster</groupId>
            <artifactId>roaster-jdt</artifactId>
            <version>${roaster-jdt.version}</version>
        </dependency>
    </dependencies>
</project>
